<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/colorbox"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center"
        android:background="@color/colorPrimary"/>

    <com.tulipan.hunter.radialmenutest.views.RadialMenuSurface
        android:id="@+id/radial_menu_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tulipan.hunter.radialmenutest.views.RadialMenuView
            android:id="@+id/radial_menu"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:numberOfOptions="7"
            custom:optionsText="RED/ORANGE/YELLOW/GREEN/BLUE/VIOLET/BLACK"/>

    </com.tulipan.hunter.radialmenutest.views.RadialMenuSurface>

</FrameLayout>
